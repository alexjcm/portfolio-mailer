{
  "name": "portfolio-mailer",
  "version": "1.1.0",
  "scripts": {
    "start": "NODE_ENV=development node ./index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker-build": "docker build --rm -t portfolio-mailer .",
    "docker-run": "docker run --rm -v ${pwd}:/portfolio-mailer -p 5000:5000 --env-file ./.env.development --name portfolio-mailer-app portfolio-mailer",
    "docker-stop": "docker rm -f portfolio-mailer-app",
    "docker-build-prod": "docker build -f Dockerfile.prod --rm -t portfolio-mailer .",
    "docker-run-prod": "docker run --rm -v ${pwd}:/portfolio-mailer -p 5000:80 --env-file ./.env.production --name portfolio-mailer-app portfolio-mailer"
  },
  "author": "alexjcm",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "nodemailer": "^6.9.1"
  }
}
